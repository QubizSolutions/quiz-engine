<!DOCTYPE html>
<html ng-app="quizEngineMaterial">
<head>
    <title>QuizEngine1</title>
    <meta charset="utf-8" />
    @Styles.Render("~/Content/mdl")
    @Styles.Render("~/Areas/M/angular-material")
    <link href="~/Areas/M/Content/bootstrap.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <md-toolbar class="md-hue-2">
        <div class="mainMenu qubiz-color">
            <div style="padding-left: 5%" class="md-toolbar-tools">
                <div class="textLogo">
                    <a class="customLogoLink" href="#/tests"><h2>Qubiz Quiz</h2></a>
                </div>
                <span flex></span>
                <h4 style="padding-right: 5%; text-wrap: none">
                    @((Authorizer.IsAdmin(User.Identity.Name)) ? string.Format("Hello, {0}", User.Identity.Name.Substring(6)) : "Hello, Guest")!
                </h4>
            </div>
        </div>
    </md-toolbar>
    @if(Authorizer.IsAdmin(User.Identity.Name))
    {
        <div ng-cloak ng-controller="MainBarTabsController as mainBarTabsCtrl">
            <md-content style="align-self:center center; align-content:center">
                <md-tabs style="padding-left: 10%; padding-right: 10%" md-dynamic-height md-border-bottom>
                    <md-tab md-on-select="mainBarTabsCtrl.testsTabClick()">
                        <div class="menuItem">Tests </div>
                    </md-tab>
                    <md-tab  md-on-select="mainBarTabsCtrl.examsTabClick()">
                        <div class="menuItem">Exams</div>
                    </md-tab>
                    <md-tab md-on-select="mainBarTabsCtrl.questionsTabClick()">
                        <div class="menuItem">Questions</div>
                    </md-tab>
                    <md-tab md-on-select="mainBarTabsCtrl.sectionsTabClick()">
                        <div class="menuItem">Sections</div>
                    </md-tab>
                    <md-tab md-on-select="mainBarTabsCtrl.administratorsTabClick()">
                        <div class="menuItem">Administrators</div>
                    </md-tab>
                </md-tabs>
            </md-content>
        </div>
    }
    <div id="body" class="body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/Areas/M/angular")
    @Scripts.Render("~/Areas/M/module")
    @Scripts.Render("~/Areas/M/AngularControllers")
    @Scripts.Render("~/Areas/M/AngularServices")
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckeditor/config.js"></script>
</body>
</html>
